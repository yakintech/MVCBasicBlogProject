
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/BlogMasterLayout.cshtml";
}
@model MVCBasicBlog.Models.VM.PostVM
<div class="container">
    <div class="row">
        <div class="box">
            @*<div class="col-lg-12">
                    <hr>
                    <h2 class="intro-text text-center">
                        YG34314 <strong>blog</strong>
                    </h2>
                    <hr>
                </div>*@
            <div class="col-lg-12 text-center">
                    <img class="img-responsive img-border img-full" src="~/Areas/Admin/Content/images/BlogPost/@Model.Path" alt="">
                <h2>
                    @Model.Title
                    <br>
                    <small>October 13, 2013</small>
                </h2>
                <p>@Html.Raw(Model.Content)</p>
                <a href="#" class="btn btn-default btn-lg">Read More</a>
                <hr>
            </div>

            <div class="col-lg-12 text-center">
                <ul class="pager">
                    <li class="previous">
                        <a href="#">&larr; Older</a>
                    </li>
                    <li class="next">
                        <a href="#">Newer &rarr;</a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>

