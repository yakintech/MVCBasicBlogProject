@{
    ViewBag.Title = "AddAdminUser";
    Layout = "~/Areas/Admin/Views/Shared/AdminLayout.cshtml";
}
@using MVCBasicBlog.Areas.Admin.Models.Types.Messages;
@model MVCBasicBlog.Areas.Admin.Models.VM.AdminUserVM
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Admin İşlemleri</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
<div class="row">
    @if (ViewBag.IslemDurum == 1)
    {
        <div class="alert alert-success">
            @ValidationMessages.success
        </div>
    }
    else if (ViewBag.IslemDurum == 2)
    {
        <div class="alert alert-danger">
            @ValidationMessages.adminemailerrormessage
        </div>
    }
    else if (ViewBag.IslemDurum == 3)
    {
        <div class="alert alert-warning">
            @ValidationMessages.generalrequiredmessage
        </div>
    }

    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Admin Ekleme Formu
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-6">
                        @using (Html.BeginForm("AddAdminUser", "AdminUser", FormMethod.Post, new { @class = "test" }))
                        {
                            <div class="form-group">
                                @Html.LabelFor(x => x.EMail)
                                @Html.TextBoxFor(x => x.EMail, new { @class = "form-control" })
                            </div>
                            
                            <div class="form-group">
                                @Html.LabelFor(x => x.Password)
                                @Html.PasswordFor(x => x.Password, new { @class = "form-control" })
                            </div>
                            <div>
                                @Html.LabelFor(x => x.ConfirmPassword)
                                @Html.PasswordFor(x => x.ConfirmPassword, new {@class="form-control" })
                            </div>
                            <div class="form-group">
                                <input type="submit" name="name" class="btn btn-default" value="Ekle" />
                            </div>
                            

                        }
                    </div>
                </div>
                <!-- /.row (nested) -->
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>
